<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Kalkulator 1 " Height="450" Width="800">
    <StackPanel>
        <Label  >Podaj liczbę całkowitą</Label>
        <TextBox x:Name="liczba1_textbox"/>

        <TextBlock TextWrapping="Wrap">Podaj liczbę rzeczywistą</TextBlock>
        <TextBox x:Name="liczba2_textbox"/>
        <Button Click="Button_Click" >Przepisz</Button>
        <Button Click="Button_Click_Silnia">Silnia liczby całkowitej</Button>
        <Button Click="Button_Click_Potega">Potega podst rzeczywista, wykladnik calkowity</Button>
        <Button Click="Button_Click_Suma_cyfr">Suma cyfr w liczbie</Button>
        <Button Click="Button_Click_1">Dzielniki liczby</Button>
        <ListView x:Name="listaDzielnikowListView"></ListView>
        <Button Click="Button_Click_CzyPierwsza">Czy liczba pierwsza</Button>
        <Button Click="Button_Click_2">Największy wspólny dzielnik dwóch liczb</Button>
        <Separator Margin="20"></Separator>
        <UniformGrid Columns="2">
            <TextBlock>Podaj liczbę do przeliczenia</TextBlock>
            <TextBox x:Name="liczbaDoPrzeliczenieTextBox"></TextBox>
            <TextBlock>Podaj system</TextBlock>
            <TextBox x:Name="systemTextBox"></TextBox>
            <Button Click="Button_Click_3">Przelicz na dziesiętne</Button>
            <Button Click="Button_Click_4">Przelicz z systemu dziesietnego</Button>
        </UniformGrid>
    </StackPanel>
</Window>
